{
  "parserOptions": {
    "ecmaVersion": 2020, // Or later
    "sourceType": "module" // Required for ES module imports
  },
  "env": {
    "node": true, // If you are working with Node.js
    "es6": true // If you are using ES6+ features
  },
  "rules": {
    "no-console": "warn",
    "no-unused-vars": "error",
    "no-trailing-spaces": "error",
    "semi": "error",
    "semi-style": ["error", "last"],
    "no-extra-semi": "error"
  }
}
